{
  "compilerOptions": {
    "module": "commonjs", // o "es2020", etc.
    "moduleResolution": "node",
    "target": "es2022", // o una versión compatible
    "esModuleInterop": true,
    "outDir": "lib", // Asegúrate de que coincida con el "main" en package.json
    "rootDir": "src", // Asegúrate de que coincida con la carpeta de fuentes
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    // otras opciones
},
"include": ["src/**/*.ts"],
"exclude": ["node_modules"]




}
